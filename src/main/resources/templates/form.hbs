{{#partial "content"}}

        <div class="well">
            <h1>Add a new Event</h1>

            <form action="/event/new" method="post">
                <div class ="form-group">
                    <label for="eventName">Event Name: </label>
                    <input id="eventName" name="eventName" type="text">
                </div>
                <div class ="form-group">
                    <label for="eventDescription">Event Description: </label>
                    <input id="eventDescription" name="eventDescription" type="text">
                </div>
                <div class="form-group">
                    <label for="eventAttendees">Event Attendees: </label>
                    <input id="eventAttendees" name="eventAttendees" type="text">
                </div>

                <button type="submit" class="btn btn-success">Add Event!</button>
            </form>
            </div>

{{/partial}}

